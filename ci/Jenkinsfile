pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building app...'
                sh 'npm i'
            }
        }

        stage('Run Local Tests') {
            steps {
                echo 'Running unit tests...'
                sh 'npm test'
            }
        }

        stage('Terraform Deploy') {
            steps {
                echo 'Deploying app to AWS...'
                sh 'terraform -v'
            }
        }

        stage('Health Check') {
            steps {
                echo 'Checking service availability...'
            }
        }
    }
}
